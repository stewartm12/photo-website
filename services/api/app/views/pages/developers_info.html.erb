<%= content_tag :section, class: 'py-12 md:py-24 bg-gradient-to-b from-[oklch(95%_0.03_72.71)] to-white' do %>
  <%= content_tag :div, class: 'container px-4 md:px-6 text-center mx-auto' do %>
    <%= content_tag :h1, 'Developer Resource', class: 'text-3xl font-bold tracking-tighter sm:text-5xl' %>
    <%= content_tag :p, 'Everything you need to integrate Cloud Photos into your applications.', class: 'mx-auto mt-4 max-w-[700px] text-gray-500 md:text-xl' %>
  <% end %>
<% end %>

<%= content_tag :section, class: 'py-12 md:py-24 bg-white' do %>
  <%= content_tag :div, class: 'container px-4 md:px-6 mx-auto' do %>
    <%= content_tag :div, class: 'grid gap-12 md:grid-cols-2 md:gap-16' do %>
      <%= content_tag :div, class: 'space-y-4' do %>
        <%= content_tag :div, class: 'inline-flex h-10 w-10 items-center justify-center rounded-full bg-[oklch(90%_0.04_72.71)]' do %>
          <%= icon 'server-stack', class: 'size-6 text-[oklch(66.14%_0.0661_72.71)]' %>
        <% end %>
        <%= content_tag :h2, 'Powerful APIs', class: 'text-2xl font-bold' %>
        <%= content_tag :p, 'Cloud Photos provides GraphQL APIs to give you flexibility in how you integrate with our platform. Our APIs are designed to be easy to use, well-documented, and powerful.', class: 'text-gray-500' %>
        <%= content_tag :div, class: 'flex flex-col gap-2 min-[400px]:flex-row' do %>
          <%= link_to new_registration_path, class: 'flex space-x-2 text-white items-center rounded-md p-2 text-sm hover:cursor-pointer bg-black font-medium' do %>
            <%= content_tag :span, 'Get Started' %>
            <%= icon 'arrow-right', class: 'size-4 text-caramel' %>
          <% end %>
        <% end %>
      <% end %>
      <%= content_tag :div, class: 'rounded-xl border border-gray-400 bg-white p-4 shadow-sm' do %>
        <%= content_tag :pre, class: 'overflow-x-auto text-xs text-left md:text-sm font-mono' do %>
          <%= content_tag :code, class: 'language-graphql' do %>
<%= <<~GRAPHQL.strip.html_safe %>
              query GetCollectionPhotos {
                collection(id: "collection_123") {
                  id
                  name
                  photos {
                    id
                    url
                    width
                    height
                    description
                    order
                  }
                }
              }
            GRAPHQL
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

<%= content_tag :section, class: 'py-12 md:py-24' do %>
  <%= content_tag :div, class: 'container px-4 md:px-6 mx-auto' do %>
    <%= content_tag :div, class: 'grid gap-12 md:grid-cols-2 md:gap-16' do %>
      <%= content_tag :div, class: 'order-2 md:order-1 rounded-xl border border-gray-400 bg-white p-4 shadow-sm' do %>
        <%= content_tag :pre, class: 'overflow-x-auto text-xs md:text-sm' do %>
          <%= content_tag :code, class: 'language-javascript' do %>
<%= <<~JS.strip.html_safe %>
              import { CloudPhotos } from '@cloudphotos/sdk';

              // Initialize the SDK with your API key
              const client = new CloudPhotos({
                apiKey: 'YOUR_API_KEY'
              });

              // Get photos from a collection
              async function getPhotos() {
                const photos = await client.collections.getPhotos('collection_123');
                
                // Render photos in your application
                photos.forEach(photo => {
                  const img = document.createElement('img');
                  img.src = photo.url;
                  img.alt = photo.description;
                  document.getElementById('gallery').appendChild(img);
                });
              }
            JS
          <% end %>
        <% end %>
      <% end %>

      <%= content_tag :div, class: 'order-1 md:order-2 space-y-4' do %>
        <%= content_tag :div, class: 'inline-flex size-10 items-center justify-center rounded-full bg-[oklch(90%_0.04_72.71)]' do %>
          <%= icon 'code-bracket', class: 'size-6 text-[oklch(66.14%_0.0661_72.71)]' %>
        <% end %>
        <%= content_tag :h2, 'SDKs & Libraries', class: 'text-2xl font-bold' %>
        <%= content_tag :p, 'We provide official SDKs for popular programming languages and frameworks to make integration even easier. Our SDKs handle authentication, error handling, and provide a clean interface to our APIs.', class: 'text-gray-500' %>
        <%= content_tag :ul, class: 'grid gap-2' do %>
          <%= content_tag :li, class: 'flex items-center gap-2' do %>
            <%= icon 'arrow-right', class: 'size-4 text-caramel' %>
            <%= content_tag :span, 'JavaScript SDK' %>
          <% end %>
          <%= content_tag :li, class: 'flex items-center gap-2' do %>
            <%= icon 'arrow-right', class: 'size-4 text-caramel' %>
            <%= content_tag :span, 'Ruby Gem' %>
          <% end %>
          <%= content_tag :li, class: 'flex items-center gap-2' do %>
            <%= icon 'arrow-right', class: 'size-4 text-caramel' %>
            <%= content_tag :span, 'Next.js' %>
          <% end %>
          <%= content_tag :li, class: 'flex items-center gap-2' do %>
            <%= icon 'arrow-right', class: 'size-4 text-caramel' %>
            <%= content_tag :span, 'Ruby on Rails' %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

