<%= content_tag :section, class: 'py-12 md:py-24 bg-gradient-to-b from-[oklch(95%_0.03_72.71)] to-white' do %>
  <%= content_tag :div, class: 'container px-4 md:px-6 text-center mx-auto' do %>
    <%= content_tag :h1, 'Powerful Photo Management Features', class: 'text-3xl font-bold tracking-tighter sm:text-5xl' %>
    <%= content_tag :p, 'Pix Cloud provides everything you need to store, organize, and share your photos with the world.', class: 'mx-auto mt-4 max-w-[700px] text-gray-500 md:text-xl' %>
