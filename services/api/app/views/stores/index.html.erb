<%= content_tag :div, class: 'p-8' do %>
  <%= content_tag :div, class: 'mb-8' do %>
    <%= content_tag :h1, "Welcome, #{Current.user.first_name}", class: 'text-3xl font-bold tracking-tight mb-2' %>
    <%= content_tag :p, 'Manage your photography stores and access all your galleries, appointments, and customers in one place.', class: 'text-gray-500' %>
  <% end %>

  <%= content_tag :div, class: 'flex items-center justify-between mb-6' do %>
    <%= content_tag :div do %>
      <%= content_tag :h2, 'Your Stores', class: 'text-xl font-semibold' %>
      <%= content_tag :p, "You have access to #{Current.user.stores.count} stores", class: 'text-gray-500 text-sm' %>
    <% end %>

    <%= link_to new_store_path, class: 'inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium [&_svg]:size-4 [&_svg]:shrink-0 h-10 px-4 py-2 bg-[oklch(66.14%_0.0661_72.71)] hover:bg-[oklch(60%_0.0661_72.71)] text-white', data: { turbo_frame: 'modal' } do %>
      <%= icon 'plus', class: 'size-4 text-white' %>
      <%= content_tag :span, 'Create Store'  %>
    <% end %>
  <% end %>

  <%= content_tag :div, id: 'stores_results', class: 'grid gap-6 md:grid-cols-2 lg:grid-cols-3' do %>
    <% @stores.each do |store| %>
      <%= render 'store_card', store: store %>
    <% end %>
  <% end %>
<% end %>
