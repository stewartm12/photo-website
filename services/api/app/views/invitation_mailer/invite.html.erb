<%= content_tag :div, class: "max-w-xl mx-auto bg-white p-6 rounded-lg shadow-md text-base", style: "font-family: Arial, sans-serif;" do %>
  <%= content_tag :div, style: "text-align: center; margin-bottom: 20px;" do %>
    <%= image_tag image_url('logo-transparent-svg.svg'), alt: 'Pics Cloud Logo', style: "width: 100px; height: auto; border-radius: 50%;" %>
  <% end %>

  <%= content_tag :h1, 'You’ve Been Invited to Join a Store', class: "text-xl font-semibold text-gray-800 mb-4 text-center" %>

  <%= content_tag :p, "Hello!", class: "text-gray-700 mb-3" %>

  <%= content_tag :p, "#{@user.full_name} has invited you to join their store, #{@store.name}, on our platform.", class: "text-gray-700 mb-3" %>

  <%= content_tag :p, "As a store member, you’ll be able to collaborate on managing sessions, view appointments, and coordinate with clients through our dashboard.", class: "text-gray-700 mb-3" %>

  <%= content_tag :p, "To get started, please click the button below to accept the invitation and create your account (or log in if you already have one).", class: "text-gray-700 mb-3" %>

  <%= content_tag :div, class: "text-center my-6" do %>
    <%= link_to "Accept Invitation", store_store_membership_url(@store, token: @user.generate_invitation_token), class: "inline-block bg-indigo-600 text-white px-4 py-2 rounded-md text-sm font-semibold hover:bg-indigo-700" %>
  <% end %>

  <%= content_tag :p, "If the button above doesn’t work, you can also copy and paste the following link into your browser:", class: "text-gray-700 mb-3" %>

  <%= content_tag :p, store_store_membership_url(@store, token: @user.generate_invitation_token), class: "text-sm text-blue-600 break-all" %>

  <%= content_tag :hr, nil, class: "my-6 border-t border-gray-300" %>

  <%= content_tag :p, "&copy; #{Time.current.year} #{@store.name}", class: "text-gray-500 text-sm mt-2" %>

<% end %>
