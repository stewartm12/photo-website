<%= turbo_frame_tag 'modal' do %>
  <%= content_tag :div, data: { controller: :modal, modal_target: 'modal', action: 'turbo:submit-end->modal#submitEnd keyup@window->modal#closeWithKeyboard click@window->modal#closeBackground' } do %>
    <%= content_tag :div, nil, class: 'fixed inset-0 bg-black opacity-50 z-60', data: { action: 'click->modal#hideModal' } %>
    <%= content_tag :div, class: 'fixed left-1/2 top-1/2 z-70 w-full max-w-lg -translate-x-1/2 -translate-y-1/2 bg-white p-6 shadow-lg sm:rounded-lg' do %>
      <%= render 'showcase_form',
        showcase: @showcase,
        url: store_showcase_path(Current.store, @showcase, case_type: @case_type),
        title: 'Edit Showcase',
        description: 'Update the details of this showcase',
        submit_text: 'Update Showcase',
        display_photo_form: @case_type == 'upload_photos'
      %>
    <% end %>
  <% end %>
<% end %>
