<%= content_tag :div, class: "min-h-screen px-6 py-8" do %>
  <%= content_tag :div, class: 'container mx-auto flex justify-center p-4 mb-4' do %>
    <%= content_tag :span, "Welcome, #{Current.user.full_name}" %>
  <% end %>
  <%= content_tag :div, class: 'flex items-center justify-between mb-8' do %>
    <%= content_tag :div do %>
      <%= content_tag :h1, 'Your Stores', class: "text-3xl font-bold mb-1" %>
      <%= content_tag :p, 'Manage and create your stores', class: "text-md text-gray-500" %>
    <% end %>

    <%= link_to "+ Create Store", new_store_path, class: "bg-black text-white px-4 py-2 rounded-md font-medium text-sm hover:bg-gray-900" %>
  <% end %>

  <%= content_tag :div, class: "grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6" do %>
    <% @stores.each do |store| %>
      <%= content_tag :div, class: "bg-white p-5 rounded-xl border border-gray-300 hover:shadow-lg transition-shadow duration-200" do %>
        <%= content_tag :div, class: "flex items-center gap-4 mb-4" do %>
          <%= content_tag :div do %>
            <%= content_tag :h2, store.name, class: "font-semibold text-lg text-base" %>
          <% end %>
        <% end %>

        <%= content_tag :div, class: "flex justify-between text-sm mb-4" do %>
          <%= content_tag :div do %>
            <%= content_tag :div, "Galleries", class: "text-gray-600" %>
            <%= content_tag :div, store.galleries_count, class: "font-medium text-sm" %>
          <% end %>
          <%= content_tag :div do %>
            <%= content_tag :div, 'Collections', class: "text-gray-600" %>
            <%= content_tag :div, store.collections.count, class: "font-medium text-sm" %>
          <% end %>
        <% end %>

        <%= content_tag :div, class: "mt-auto" do %>
          <%= link_to store_home_path(store), class: "flex items-center justify-center gap-1 text-sm px-4 py-2 border rounded-md w-full hover:bg-gray-50" do %>
            <%= icon 'shopping-bag', class: 'h-5 w-5' %>
            <%= content_tag :span, "Manage Store" %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
