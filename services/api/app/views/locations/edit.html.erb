<%= turbo_frame_tag 'modal' do %>
  <%= content_tag :div, data: { controller: :modal, modal_target: 'modal', action: 'turbo:submit-end->modal#submitEnd keyup@window->modal#closeWithKeyboard' } do %>
    <%= content_tag :div, nil, class: 'fixed inset-0 bg-black opacity-50 z-60', data: { action: 'click->modal#hideModal' } %>
    <%= content_tag :div, class: 'fixed left-1/2 top-1/2 z-70 w-full max-w-lg -translate-x-1/2 -translate-y-1/2 bg-white p-6 shadow-lg sm:rounded-lg'  do %>
      <%= render 'location_form',
        location: @location,
        url: store_appointment_location_path(Current.store, @appointment, @location),
        title: 'Edit Location',
        description: 'Update the details of this Location.',
        submit_text: 'Update Location'
      %>
    <% end %>
  <% end %>
<% end %>
