    <%= content_tag :h3, title, class: 'tracking-tight text-sm font-medium text-gray-500' %>
  <% end %>
  <%= content_tag :div, class: 'p-6 pt-0' do %>
    <%= content_tag :div, class: 'flex items-center' do %>
      <%= icon svg_icon, class: 'size-8 text-[oklch(66.14%_0.0661_72.71)] mr-2' %>
