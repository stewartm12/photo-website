<%= content_tag :div, class: "max-w-xl mx-auto bg-white p-6 rounded-lg shadow-md text-base", style: "font-family: Arial, sans-serif;" do %>
  <%= content_tag :div, style: "text-align: center; margin-bottom: 20px;" do %>
    <%= image_tag image_url('logo-transparent-svg.svg'), alt: 'Pix Cloud Logo', style: "width: 100px; height: auto; border-radius: 50%;" %>
  <% end %>

  <%= content_tag :h1, "Password Reset Instructions", class: "text-xl font-semibold text-gray-800 mb-4 text-center" %>

  <%= content_tag :p, "Hi #{@user.full_name},", class: "text-gray-700 mb-3"%>

  <%= content_tag :p, "We received a request to reset the password associated with your account. If you made this request, you can reset your password using the link below.", class: "text-gray-700 mb-3" %>

  <%= content_tag :div, class: "text-center my-6" do %>
    <%= link_to "Reset Password", edit_password_url(token: @user.password_reset_token), class: "inline-block bg-indigo-600 text-white px-4 py-2 rounded-md text-sm font-semibold hover:bg-indigo-700" %>
  <% end %>

  <%= content_tag :p, "This link will expire in 15 minutes for your security. If it expires, you can request a new password reset.", class: "text-gray-700 mb-3" %>

  <%= content_tag :p, "If you did not request a password reset, please ignore this email. Your password will remain unchanged.", class: "text-gray-700 mb-3" %>

  <%= content_tag :hr, nil, class: "my-6 border-t border-gray-300" %>

  <%= content_tag :p, "&copy; #{Time.current.year} PixCloud", class: "text-gray-500 text-sm" %>
<% end %>
