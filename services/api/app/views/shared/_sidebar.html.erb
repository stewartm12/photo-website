<%= content_tag :nav, class: 'bg-stone-200 rounded-tl-3xl max-w-[15rem] w-64 min-w-[12rem] p-4 hidden md:flex flex-col justify-between text-center sticky top-20 h-[calc(100vh-80px)]' do %>
  <%= content_tag :div, class: 'flex flex-col space-y-1' do %>
    <%= nav_link_to store_home_path(Current.store), class: 'flex items-center space-x-2 text-sm hover:bg-stone-100 p-1 rounded-md' do %>
      <%= icon 'home', class: 'size-4' %>
      <%= content_tag :p, 'Home' %>
    <% end %>
    <%= nav_link_to store_galleries_path(Current.store), class: 'flex items-center space-x-2 text-sm hover:bg-stone-100 p-1 rounded-md' do %>
      <%= icon 'square-3-stack-3d', class: 'size-4' %>
      <%= content_tag :p, 'Galleries' %>
    <% end %>
    <%= nav_link_to store_appointments_path(Current.store), class: 'flex items-center space-x-2 text-sm hover:bg-stone-100 p-1 rounded-md' do %>
      <%= icon 'inbox', class: 'size-4' %>
      <%= content_tag :p, 'Appointments' %>
    <% end %>
    <%= nav_link_to store_customers_path(Current.store), class: 'flex items-center space-x-2 text-sm hover:bg-stone-100 p-1 rounded-md' do %>
      <%= icon 'user', class: 'size-4' %>
      <%= content_tag :p, 'Customers' %>
    <% end %>
    <%= nav_link_to store_pricings_path(Current.store), class: 'flex items-center space-x-2 text-sm hover:bg-stone-100 p-1 rounded-md' do %>
      <%= icon 'banknotes', class: 'size-4' %>
      <%= content_tag :p, 'Pricings' %>
    <% end %>
  <% end %>

  <%= content_tag :div, class: 'flex flex-col space-y-1' do %>
    <%= nav_link_to edit_store_path(Current.store), class: 'flex items-center space-x-2 text-sm hover:bg-stone-100 p-1 rounded-md' do %>
      <%= icon 'cog-8-tooth', class: 'size-4' %>
      <%= content_tag :p, 'Setting' %>
    <% end %>
    <%= button_to 'Sign Out',
      session_path,
      method: :delete,
      data: { turbo_confirm: 'Are you sure you want to delete this gallery?' },
      class: 'text-red-500 font-medium text-sm hover:underline cursor-pointer' %>
    <% end %>
<% end %>
