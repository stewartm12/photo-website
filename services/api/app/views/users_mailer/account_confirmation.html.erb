<%= content_tag :div, class: "max-w-xl mx-auto bg-white p-6 rounded-lg shadow-md text-base", style: "font-family: Arial, sans-serif;" do %>
  <%= content_tag :div, style: "text-align: center; margin-bottom: 20px;" do %>
    <%= image_tag image_url('logo-transparent-svg.svg'), alt: 'Pix Cloud Logo', style: "width: 100px; height: auto; border-radius: 50%;" %>
  <% end %>

  <%= content_tag :h1, "Welcome, #{@user.full_name}", class: "text-xl font-semibold text-gray-800 mb-4 text-center" %>

  <%= content_tag :p, "Thanks for signing up with PixCloud!", class: "text-gray-700 mb-3" %>

  <%= content_tag :p, "To activate your account and start using our services, please confirm your email address by clicking the button below:", class: "text-gray-700 mb-3" %>

  <%= content_tag :div, class: "text-center my-6" do %>
    <%= link_to "Confirm My Account", confirmation_url(token: @user.generate_confirmation_token), class: "inline-block bg-green-600 text-white px-4 py-2 rounded-md text-sm font-semibold hover:bg-green-700" %>
  <% end %>

  <%= content_tag :p, "If the button above doesn't work, you can copy and paste the following link into your browser:", class: "text-gray-700 mb-3" %>

  <%= content_tag :p, confirmation_url(token: @user.generate_confirmation_token), class: "text-sm text-blue-600 break-all" %>

  <%= content_tag :hr, nil, class: "my-6 border-t border-gray-300" %>

  <%= content_tag :p, "If you didnâ€™t create an account, you can ignore this message.", class: "text-gray-500 text-sm" %>

  <%= content_tag :p, "&copy; #{Time.current.year} PixCloud", class: "text-gray-500 text-sm mt-2" %>
<% end %>
