<%= content_tag :div, class: 'p-6' do %>
  <%= content_tag :div, class: 'flex items-center gap-2 mb-6 text-sm' do %>
    <%= link_to 'Home', store_home_path(Current.store), class: 'text-gray-500 hover:text-gray-700' %>
    <%= icon 'chevron-right', class: 'text-gray-500 size-3' %>
    <%= content_tag :span, 'Showcases' %>
  <% end %>

  <%= content_tag :div, class: 'flex flex-col md:flex-row md:items-center md:justify-between mb-8' do %>
    <%= content_tag :div do %>
      <%= content_tag :h1, 'Showcases', class: 'text-2xl font-bold' %>
      <%= content_tag :p, 'Curate visuals for every part of your store', class: 'text-gray-500' %>
    <% end %>
    <%= link_to new_store_showcase_path(Current.store, @showcase), class: 'inline-flex items-center justify-center gap-2 rounded-md text-sm font-medium [&_svg]:size-4 h-10 px-4 py-2 bg-[oklch(66.14%_0.0661_72.71)] hover:bg-[oklch(60%_0.0661_72.71)] text-white', data: { turbo_frame: 'modal' } do %>
      <%= icon 'plus' %>
      <%= content_tag :span, 'Create Showcase' %>
    <% end %>
  <% end %>

  <%= turbo_frame_tag 'showcases_results' do %>
    <%= render 'showcases/showcases_results' %>
  <% end %>
<% end %>
